@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-md-12">
        <div class="text-center">
            <h1 class="display-1" style=" color: #e21212; font-size:larger;font-size: 165px;">
                @*<i class="fas fa-grimace"></i>*@
                <i class="fas fa-frown"></i>
            </h1>

            <h1 class="display-3">
                Oops!
            </h1>
            <div class="pt-2 " style="font-size: 20px;">
                An error occurred while processing your request.
            </div>

            <div class="pt-3" style="font-size: 12px !important;">

                Occured At : <strong>  @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff") </strong>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="pt-3" style="font-size: 12px !important;">
                    Request ID : <strong>   @Model.RequestId </strong>
            </div>
            }

            <div class="error-actions pt-4">
                <a href="\Home" class="btn btn-primary btn-lg" onclick="JsMain.ShowLoaddingIndicator()">
                    <i class="fas fa-home"></i>
                    Take Me Home
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#loadingIconModal').modal('hide');
    });
</script>